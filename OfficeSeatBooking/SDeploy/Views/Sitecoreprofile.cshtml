@using Sitecore.Mvc
@using Sitecore.Mvc.Analytics.Extensions

@{ 
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
</head>
<style>

    .img {
        position: absolute;
        background-size: cover;
        background-position: 50%;
        background-repeat: no-repeat;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0.4;
    }

    .mask {
        position: absolute;
        background-size: cover;
        top: 0;
        width: 100%;
        height: 70%;
    }

    .bg-gradient-primary {
        background-image: linear-gradient(310deg,#7928ca,#ff0080);
        height: 70%;
        width: 100%;
        opacity: 1;
    }

    .profile {
        background-color:palevioletred;
        padding: 30px;
        margin-top: 100px;
        border-radius: 10px;
        box-shadow: 0 0 10px 2px rgba(0,0,0,0.1);
        align-items: center;
        height: 570px;
        border: 1px solid black;
    }

    .profile-pic {
        position: relative;
        width: 100px;
        height: 100px;
        overflow: hidden;
        border-radius: 50%;
        margin: 0 auto;
        border: 2px solid black;
    }

        .profile-pic img {
            width: 100%;
            height: 100%;
        }

    .btnn {
        position: absolute;
        bottom: 0;
        right: 0;
        background-color: #007bff;
        color: #fff;
        padding: 5px 10px;
        font-size: 14px;
        border-radius: 5px;
        cursor: pointer;
        margin: auto;
    }

        .btnn:hover {
            background-color: #0069d9;
        }

    .media screen and (max-width: 768px) {
        .profile

    {
        margin-top: 50px;
        padding: 20px;
    }

    .profile-pic {
        width: 80px;
        height: 80px;
    }

    }

    .media screen and (max-width: 576px) {
        .profile

    {
        margin-top: 30px;
        padding: 10px;
    }

    .profile-pic {
        width: 60px;
        height: 60px;
    }

    h2 {
        font-size: 20px;
    }

    }

    .profile h2:hover,
    .profile h5:hover {
        text-shadow: 4px 4px 0 #007bff;
    }

    .profile {
        position: relative;
        perspective: 1000px;
    }



        .profile .profile-pic img {
            backface-visibility: hidden;
            border-radius: 50%;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }



        .profile .profile-pic .back img {
            border-radius: 50%;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

    .edit-button {
        backface-visibility: hidden;
        position: absolute;
        bottom: 0;
        right: 0;
    }

    .con {
        background-image: url("https://www.verlinvest.com/wp-content/uploads/2020/08/valtech-1024x682-1.jpg");
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>



<body>

    <div class="mask bg-gradient-primary">
   
        <img class="img"
             src="https://demos.creative-tim.com/marketplace/soft-ui-design-system-pro/assets/img/curved-images/curved1.jpg"
             alt="img">
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="profile">
                    <form method="get" enctype="multipart/form-data">
                        <div class="profile-pic">

                            @Html.Sitecore().Field("Picture")
                        </div>
                        <h2 class="text-center mt-3 mb-4"> @Html.Sitecore().Field("Employee Name")</h2>
                        <hr />
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <h6><strong>Email:</strong>    @Html.Sitecore().Field("Email Id")</h6>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <h6><strong>Phone:</strong>    @Html.Sitecore().Field("Phone Number")</h6>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <h6><strong>Emp Id:</strong><br />@Html.Sitecore().Field("Employee Id") </h6>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <h6><strong>Name: </strong>   @Html.Sitecore().Field("Employee Name") </h6>
                            </div>
                        </div>
                        <button type="button" class="btn btn-warning"><a asp-area="" asp-controller="Employee" asp-action="EditProfile" style="color:white">Edit</a></button>
                        &nbsp; &nbsp; <button type="button" class="btn btn-success"><a href="http://mysite.local/DashBoard">Home</a></button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</body>
</html>